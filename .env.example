# Copy this file to .env and fill in your values
# .env is git-ignored

FLASK_SECRET_KEY=replace-with-a-long-random-string

# LLM mode: false = local Ollama, true = Claude API
USE_CLAUDE_API=false

# Required only when USE_CLAUDE_API=true
ANTHROPIC_API_KEY=sk-ant-...

# Anonymise DuckDB schema names before sending to LLM (recommended for prod)
ANONYMIZE_SCHEMA=false

# ─── Cube.js ──────────────────────────────────────────────────────────────────
# Shared secret between Flask (JWT signer) and Cube.js (JWT verifier)
# Must be at least 32 characters; change in production
CUBEJS_API_SECRET=change-this-secret-min-32-chars-long

# URL Flask uses to call Cube.js (Docker internal hostname when using compose)
CUBEJS_URL=http://cubejs:4000

# Node environment for Cube.js container ('development' or 'production')
NODE_ENV=development
